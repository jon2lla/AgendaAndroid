<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/disabled_color"

    tools:context=".modeloDeVista.presenter.PantallaDeCarga">

    <ImageView
        android:id="@+id/iconoAndroid"
        android:layout_width="174dp"
        android:layout_height="141dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/dscrIcoAndroid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_android" />

    <TextView
        android:id="@+id/lblPby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblPowered"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/iconoAndroid"
        app:layout_constraintEnd_toEndOf="@+id/iconoAndroid"
        app:layout_constraintStart_toStartOf="@+id/iconoAndroid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>